{
  "name": "circadian-hue-monorepo",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "cd circadian-hue && npm run dev",
    "build": "cd circadian-hue && npm run build",
    "preview": "cd circadian-hue && npm run preview",
    "test": "tsx --test server/__tests__/*.ts circadian-hue/mobile/test-mobile.js",
    "setup-env": "node scripts/setup-env.js",
    "generate-schemas": "tsx scripts/generate-schemas.ts",
    "lint": "eslint \"{server,circadian-hue/server}/**/*.{ts,js}\"",
    "format": "prettier --write \"{server,circadian-hue/server}/**/*.{ts,js,json,md}\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.6.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "@types/suncalc": "^1.9.2"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "lowdb": "^7.0.1",
    "node-hue-api": "^5.0.0-beta.16",
    "pino": "^9.8.0",
    "suncalc": "^1.9.0"
  }
