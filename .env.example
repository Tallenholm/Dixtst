# Circadian Hue Home Edition environment variables
# Copy to .env and adjust as needed

# Port for the combined API + web server
PORT=5000

# Optional shared secret for LAN access (leave empty to disable)
ACCESS_TOKEN=

# Path to the SQLite database storing bridge credentials and schedules
HUE_DB_PATH=./data/circadian-hue.db

# Endpoint used for IP geolocation when auto-detecting location
LOCATION_ENDPOINT=https://ipapi.co/json/
