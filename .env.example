# Circadian Hue Environment Variables
# Copy this file to .env and fill in your values

# Required - PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=

# Optional - Environment (development/production)
NODE_ENV=development

# Required - Server Port
PORT=3000

# Optional - Error Monitoring (Sentry, etc)
# SENTRY_DSN=

# Optional - Analytics
# ANALYTICS_ID=

# Optional - Google Calendar API key
# GOOGLE_API_KEY=

# Optional - Custom Domain (for CORS)
# ALLOWED_ORIGINS=https://yourdomain.com

# Required - JWT secret for API authentication
JWT_SECRET=

# Required - IP geolocation service endpoint
IPAPI_ENDPOINT=

# Note: Philips Hue bridge credentials are stored in the database
# after initial pairing, not in environment variables
