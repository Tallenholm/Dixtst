# Circadian Hue Environment Variables
# Copy this file to .env and fill in your values

# Required - PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=

# Required - JWT signing secret
JWT_SECRET=

# Optional - Environment (development/production)
NODE_ENV=development

# Optional - Server Port
PORT=5000

# Optional - Error Monitoring (Sentry, etc)
# SENTRY_DSN=

# Optional - Analytics
# ANALYTICS_ID=

# Optional - Custom Domain (for CORS, comma separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://other.com

# Paths to TLS certificate and key
# TLS_CERT_PATH=server/certs/server.crt
# TLS_KEY_PATH=server/certs/server.key

# HashiCorp Vault configuration for production
# VAULT_ADDR=https://vault.example.com
# VAULT_TOKEN=
# VAULT_SECRET_PATH=kv/circadian-hue

# Note: Philips Hue bridge credentials are stored in the database
# after initial pairing, not in environment variables